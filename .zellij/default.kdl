layout {
    default_tab_template {
        children
        pane size=1 borderless=true {
            plugin location="zellij:compact-bar"
        }
    }
    tab name="main" {
        pane {
           command "zsh"
        }
    }
    tab name="gemini" {
        pane {
           command "gemini"
        }
    }
    tab name="git" {
        pane {
           command "lazygit"
        }
    }
    tab name="ollama" {
        pane {
           command "ollama"
           args "serve"
        }
    }
}
